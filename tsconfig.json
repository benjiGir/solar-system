{
  "compilerOptions": {
    "target": "ESNext",                                  
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],                                      
    "module": "ESNext",                                
    "allowJs": false,                                  
    "checkJs": false,                                     
    "esModuleInterop": false,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,                                    
    "skipLibCheck": true,
    "noEmit": true,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],                           
  
}
